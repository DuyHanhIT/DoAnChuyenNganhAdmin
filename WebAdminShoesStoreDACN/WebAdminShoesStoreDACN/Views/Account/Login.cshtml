@model WebAdminShoesStoreDACN.Models.Account
@{
    <title>Đăng nhập | VLTH Store</title>
    Layout = null;
}
<html lang="en">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    @*<link href="css/styles.css" rel="stylesheet" />*@
    @*<link href="css/styles.css" rel="stylesheet" />*@
    <link href="~/Content/css/login/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        #inputEmail, #inputPassword, #inputRememberPassword {
            background: rgba(255,255,255,.08);
            border: 1px solid transparent;
            background-color: rgba(255,255,255,.08);
        }

        #inputEmail, #inputPassword, #btnLogin {
            border-radius: 30px;
        }

        #inputRememberPassword:checked {
            background-color: #fbceb5;
        }

        #btnLogin {
            height: 45px;
            background-color: #fbceb5
        }

        #inputEmail:hover, #inputPassword:hover, #inputRememberPassword:hover {
            border: 1px solid #fff;
        }

        .Edit {
            background: rgba(255,255,255,.1);
            border: 1px solid transparent;
            border-radius: 30px;
            background-color: none;
            height: 45px;
            color: #fff
        }

            .Edit:focus {
                background-color: rgba(255,255,255,.1);
                background: rgba(255,255,255,.1);
            }

            .Edit::placeholder {
                color: #fff;
            }

        #card-header, #card-footer {
            background: none;
        }

        #textLogin {
            font-family: 'Times New Roman', Times, serif;
            font-weight: 400;
            color: #fff;
            @*color: #F5921E;*@
        }
    </style>
    
</head>
<body class="mb-0" style="background-repeat:no-repeat; background-size:100% 100%; background-image: url('https://preview.colorlib.com/theme/bootstrap/login-form-20/images/xbg.jpg.pagespeed.ic.tiVxeakBSd.webp');">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        <div id="layoutAuthentication" style="margin:30px;">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 mt-5">
                                <div class="card-header" id="card-header"><h2 class="text-center font-weight-light my-4 mb-0" id="textLogin">Login</h2></div>

                                <div class="card-body " style="background:none;">

                                    @if (@ViewData["ER"] == null)
                                    {
                                        <p class="text-center text-danger   " style="visibility:hidden;">@ViewData["ER"] </p>
                                    }
                                    else
                                    {
                                        <p class="text-center text-danger   ">@ViewData["ER"] </p>
                                    }
                                    <form class="user">
                                        <div class="form-group mb-3 form-floating">

                                            <div class="col-md-12 " id="inputEmail">
                                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control Edit form-control  text-white ", placeholder = "Email address" } })
                                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                                <span class="text-danger">
                                                    @ViewData["ChuaNhapUserName"]
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group mb-3 form-floating">

                                            <div class="col-md-12" id="inputPassword">
                                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control Edit form-control  text-white", placeholder = "Password" } })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                <span class="text-danger">
                                                    @ViewData["ChuaNhapPassword"]
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-check mb-6 col">
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label col-lg-8" style="color: #fbceb5; " for="inputRememberPassword">Remember Password</label>
                                            <a class="small col-lg-2 text-right " style="text-decoration: none; color: #fff " href="password.html">Forgot Password?</a>
                                        </div>
                                        @*<input type="submit" value="Đăng nhập" class="btn btn-primary btn-user " />*@
                                        @*  @Html.ActionLink("Hủy", "Index", "Home", new { id = "" }, new { @class = "btn btn-primary" })*@
                                        @* <div class="d-flex align-items-center justify-content-between mt-4 mb-0 ">
                                                <a class="btn col-lg-12  text-center " href="@Url.Action("Index","Account")" id="btnLogin">Login</a>
                                            </div>*@
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0 ">
                                            <input type="submit" id="btnLogin" value="Đăng nhập" class="btn  btn-user col-lg-12 " />
                                            
                                        </div>

                                    </form>
                                    @*<form>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                                <label for="inputEmail" id="lbEmail">Email address</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                                <label for="inputPassword" id="lbPassword">Password</label>
                                            </div>

                                            <div class="form-check mb-6 col">
                                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                                <label class="form-check-label col-lg-8" style="color: fbceb5;" for="inputRememberPassword">Remember Password</label>
                                                <a class="small col-lg-2 text-right text-white" style="text-decoration:none" href="password.html">Forgot Password?</a>
                                            </div>

                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0 ">
                                                <a class="btn col-lg-12  text-center "href="#" id="btnLogin">Login</a>
                                            </div>


                                        </form>*@
                                </div>
                                <div class="card-footer text-center py-3" id="card-footer">
                                    <div class="small "><a href="#" class="" style="color: #F5921E; text-decoration: none; font-size: 16px ">Need an account? Sign up!</a></div>


                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            @*<div id="layoutAuthentication_footer">
                    <footer class="py-4 bg-light mt-auto">
                        <div class="container-fluid px-4">
                            <div class="d-flex align-items-center justify-content-between small">
                                <div class="text-muted">Copyright &copy; Your Website 2022</div>
                                <div>
                                    <a href="#">Privacy Policy</a>
                                    &middot;
                                    <a href="#">Terms &amp; Conditions</a>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>*@
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    @*<script src="js/scripts.js"></script>*@
</body>
</html>

  

    



