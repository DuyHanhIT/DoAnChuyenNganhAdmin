                            tr += '</td>';

                            tr += '</tr>';

                            $('#tbDsSale').append(tr);

                        });

                        if (data.numPages > 1) {
                            $('#phanTrangSale').empty();
                            for (i = 1; i <= data.numPages; i++) {
                                let li = '<li class="page-item" id="' + i + '" ><a class="page-link" href="#">' + i + '</a></li>'
                                $('#phanTrangSale').append(li);
                            }
                            let li = $('#phanTrangSale li#' + page + '');
                            console.log('li duoc click', $(li).text());
                            $(li).addClass('active');


                        }
