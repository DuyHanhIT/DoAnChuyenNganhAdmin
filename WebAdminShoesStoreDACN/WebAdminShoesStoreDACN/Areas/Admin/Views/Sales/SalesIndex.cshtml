                            $('#pictureUploadBanner').attr('src', "");
                            $('#pictureUploadBanner').hide();
                            $('#saleName,#percent,#Content,#createDay,#createby,#updateby,#Banner,#endday,#startDay,#ipSale').val('');

                        } else {
                            alertify.error(data.Message);

