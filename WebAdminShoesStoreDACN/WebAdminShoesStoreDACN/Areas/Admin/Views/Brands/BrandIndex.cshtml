        var search = "";
        var page = 1;
        $(document).ready(function () {
            loadDSBrand(search, page);

        });
        var t = $('#form-brand').validate({
            rules: {
                'brandname': {
                    required: true,
                    maxlength:50
                }, 'infobrand': {
